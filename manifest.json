{
  "manifest_version": 3,
  "name": "QuickFinder",
  "version": "2.0.0",
  "description": "快速搜索书签、历史记录和网页，支持中文拼音搜索和AI增强功能",

  "permissions": [
    "bookmarks",
    "history",
    "tabs",
    "activeTab",
    "storage",
    "scripting"
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "content.js"
      ],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "QuickFinder",
    "default_icon": {
      "16": "icons/icon.png",
      "32": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },

  "icons": {
    "16": "icons/icon.png",
    "32": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },

  "commands": {
    "toggle-search": {
      "suggested_key": {
        "default": "Ctrl+Q",
        "mac": "Ctrl+Q"
      },
      "description": "打开/关闭 QuickFinder 搜索 (Ctrl+Q)"
    }
  },

  "web_accessible_resources": [
    {
      "resources": [
        "icons/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}